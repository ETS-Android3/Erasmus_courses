<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/inner_frame_layout_padding"
    tools:context=".MainActivity2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itemViewContentDescLabel"
            android:textSize="@dimen/list_desc_text_size" />
        <Space
            android:layout_width="@dimen/list_desc_space_size"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_elem_text_size"/>

    </LinearLayout>

    <TextView

    android:id="@+id/time_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"

    android:textAppearance="@android:style/TextAppearance.Large"
    android:textSize="56sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
        android:id="@+id/start_button"
        android:layout_width="@dimen/buttons_linear_horizontal_width"
        android:layout_weight="@dimen/buttons_linear_horizontal_weight"
        android:layout_margin="@dimen/final_food_item_view_padding"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:onClick="onClickStart"
        android:text="@string/start" />

        <Button
        android:id="@+id/stop_button"
        android:layout_width="@dimen/buttons_linear_horizontal_width"
        android:layout_weight="@dimen/buttons_linear_horizontal_weight"
        android:layout_margin="@dimen/final_food_item_view_padding"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:onClick="onClickStop"
        android:text="@string/stop" />

        <Button
        android:id="@+id/reset_button"
        android:layout_width="@dimen/buttons_linear_horizontal_width"
        android:layout_weight="@dimen/buttons_linear_horizontal_weight"
        android:layout_margin="@dimen/final_food_item_view_padding"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:onClick="onClickReset"
        android:text="@string/reset" />
    </LinearLayout>



</LinearLayout>