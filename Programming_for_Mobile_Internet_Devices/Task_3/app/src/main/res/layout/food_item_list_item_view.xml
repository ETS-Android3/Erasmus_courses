<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="0dp"
        android:layout_columnWeight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodItemViewNameDescLabel"
            android:textSize="@dimen/list_desc_text_size" />
        <Space
            android:layout_width="@dimen/list_desc_space_size"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_elem_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="0dp"
        android:layout_columnWeight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodItemViewPriceDescLabel"
            android:textSize="@dimen/list_desc_text_size" />

        <Space
            android:layout_width="@dimen/list_desc_space_size"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_elem_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="0dp"
        android:layout_columnWeight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodItemViewPriceDescLabel"
            android:textSize="@dimen/list_desc_text_size" />

        <Space
            android:layout_width="@dimen/list_desc_space_size"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_elem_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="0dp"
        android:layout_columnWeight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodItemViewQuantityDescLabel"
            android:textSize="@dimen/list_desc_text_size" />

        <Space
            android:layout_width="@dimen/list_desc_space_size"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_elem_text_size"/>
    </LinearLayout>
</GridLayout>